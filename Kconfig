        source "$PKGS_DIR/packages/tools/Kconfig"
        source "$PKGS_DIR/packages/system/Kconfig"
        source "$PKGS_DIR/packages/peripherals/Kconfig"
        source "$PKGS_DIR/packages/misc/Kconfig"

    endif
