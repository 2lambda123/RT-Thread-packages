
# Kconfig file for package Seeed-24GHz-Radar
menuconfig PKG_USING_ARDUINO_SEEED_24GHZ_RADAR
    bool "Seeed Radar Sensor: 24GHz mmWave module"
    select PKG_USING_RTDUINO
    default n

if PKG_USING_ARDUINO_SEEED_24GHZ_RADAR

    config PKG_ARDUINO_SEEED_24GHZ_RADAR_PATH
        string
        default "/packages/arduino/sensors/Seeed-24GHz-Radar"

    choice
        prompt "Version"
        default PKG_USING_ARDUINO_SEEED_24GHZ_RADAR_LATEST_VERSION
        help
            Select the package version

        config PKG_USING_ARDUINO_SEEED_24GHZ_RADAR_LATEST_VERSION
            bool "latest"
    endchoice

    config PKG_ARDUINO_SEEED_24GHZ_RADAR_VER
       string
       default "latest"    if PKG_USING_ARDUINO_SEEED_24GHZ_RADAR_LATEST_VERSION

endif

