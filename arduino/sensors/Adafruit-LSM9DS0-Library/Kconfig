
# Kconfig file for package Adafruit-LSM9DS0-Library
menuconfig PKG_USING_ARDUINO_ADAFRUIT_LSM9DS0_LIBRARY
    bool "Adafruit triaxial accelerometer/magnetometer/gyroscope LSM9DS0 library"
    select PKG_USING_RTDUINO
    select RTDUINO_USING_WIRE
    select RTDUINO_USING_SPI
    select PKG_USING_ARDUINO_ADAFRUIT_SENSOR
    default n

if PKG_USING_ARDUINO_ADAFRUIT_LSM9DS0_LIBRARY

    config PKG_ARDUINO_ADAFRUIT_LSM9DS0_LIBRARY_PATH
        string
        default "/packages/arduino/sensors/Adafruit-LSM9DS0-Library"

    choice
        prompt "Version"
        default PKG_USING_ARDUINO_ADAFRUIT_LSM9DS0_LIBRARY_LATEST_VERSION
        help
            Select the package version

        config PKG_USING_ARDUINO_ADAFRUIT_LSM9DS0_LIBRARY_LATEST_VERSION
            bool "latest"
    endchoice

    config PKG_ARDUINO_ADAFRUIT_LSM9DS0_LIBRARY_VER
       string
       default "latest"    if PKG_USING_ARDUINO_ADAFRUIT_LSM9DS0_LIBRARY_LATEST_VERSION

endif

