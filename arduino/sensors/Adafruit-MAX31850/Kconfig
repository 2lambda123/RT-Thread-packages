
# Kconfig file for package Adafruit-MAX31850
menuconfig PKG_USING_ARDUINO_ADAFRUIT_MAX31850
    bool "Adafruit MAX31850: Thermocouple Amplifier"
    select PKG_USING_RTDUINO
    select RTDUINO_USING_WIRE
    default n

if PKG_USING_ARDUINO_ADAFRUIT_MAX31850

    config PKG_ARDUINO_ADAFRUIT_MAX31850_PATH
        string
        default "/packages/arduino/sensors/Adafruit-MAX31850"

    choice
        prompt "Version"
        default PKG_USING_ARDUINO_ADAFRUIT_MAX31850_LATEST_VERSION
        help
            Select the package version

        config PKG_USING_ARDUINO_ADAFRUIT_MAX31850_LATEST_VERSION
            bool "latest"
    endchoice

    config PKG_ARDUINO_ADAFRUIT_MAX31850_VER
       string
       default "latest"    if PKG_USING_ARDUINO_ADAFRUIT_MAX31850_LATEST_VERSION

endif

