
# Kconfig file for package DHT-sensor
menuconfig PKG_USING_ARDUINO_DHT_SENSOR
    bool "DHT sensor: Arduino library for DHT11, DHT22, etc Temp & Humidity Sensors"
    select PKG_USING_RTDUINO
    select PKG_USING_ARDUINO_ADAFRUIT_SENSOR
    default n

if PKG_USING_ARDUINO_DHT_SENSOR

    config PKG_ARDUINO_DHT_SENSOR_PATH
        string
        default "/packages/arduino/sensors/DHT-sensor"

    choice
        prompt "Version"
        default PKG_USING_ARDUINO_DHT_SENSOR_LATEST_VERSION
        help
            Select the package version

        config PKG_USING_ARDUINO_DHT_SENSOR_LATEST_VERSION
            bool "latest"
    endchoice

    config PKG_ARDUINO_DHT_SENSOR_VER
       string
       default "latest"    if PKG_USING_ARDUINO_DHT_SENSOR_LATEST_VERSION

endif

