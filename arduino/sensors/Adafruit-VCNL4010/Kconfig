
# Kconfig file for package Adafruit-VCNL4010
menuconfig PKG_USING_ARDUINO_ADAFRUIT_VCNL4010
    bool "Adafruit Vcnl4010: Proximity And Ambient Light Sensor, Infrared Emitter."
    select PKG_USING_RTDUINO
    select RTDUINO_USING_WIRE
    select PKG_USING_ARDUINO_ADAFRUIT_BUSIO 
    default n

if PKG_USING_ARDUINO_ADAFRUIT_VCNL4010

    config PKG_ARDUINO_ADAFRUIT_VCNL4010_PATH
        string
        default "/packages/arduino/sensors/Adafruit-VCNL4010"

    choice
        prompt "Version"
        default PKG_USING_ARDUINO_ADAFRUIT_VCNL4010_LATEST_VERSION
        help
            Select the package version

        config PKG_USING_ARDUINO_ADAFRUIT_VCNL4010_LATEST_VERSION
            bool "latest"
    endchoice

    config PKG_ARDUINO_ADAFRUIT_VCNL4010_VER
       string
       default "latest"    if PKG_USING_ARDUINO_ADAFRUIT_VCNL4010_LATEST_VERSION

endif

