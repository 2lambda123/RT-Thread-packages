
# Kconfig file for package Adafruit-ADXL375
menuconfig PKG_USING_ADAFRUIT_ADXL375
    bool "Adafruit ADXL375: Accelerometer library"
    select PKG_USING_RTDUINO
    default n

if PKG_USING_ADAFRUIT_ADXL375

    config PKG_ADAFRUIT_ADXL375_PATH
        string
        default "/packages/peripherals/sensors/Adafruit-ADXL375"

    choice
        prompt "Version"
        default PKG_USING_ADAFRUIT_ADXL375_LATEST_VERSION
        help
            Select the package version

        config PKG_USING_ADAFRUIT_ADXL375_LATEST_VERSION
            bool "latest"
    endchoice

    config PKG_ADAFRUIT_ADXL375_VER
       string
       default "latest"    if PKG_USING_ADAFRUIT_ADXL375_LATEST_VERSION

endif

