
# Kconfig file for package Adafruit-PCF8591
menuconfig PKG_USING_ADAFRUIT_PCF8591
    bool "Adafruit PCF8591: Breakout Board"
    select PKG_USING_RTDUINO
    select RTDUINO_USING_WIRE
    select PKG_USING_ARDUINO_ADAFRUIT_BUSIO
    default n

if PKG_USING_ADAFRUIT_PCF8591

    config PKG_ADAFRUIT_PCF8591_PATH
        string
        default "/packages/peripherals/sensors/Adafruit-PCF8591"

    choice
        prompt "Version"
        default PKG_USING_ADAFRUIT_PCF8591_LATEST_VERSION
        help
            Select the package version

        config PKG_USING_ADAFRUIT_PCF8591_LATEST_VERSION
            bool "latest"
    endchoice

    config PKG_ADAFRUIT_PCF8591_VER
       string
       default "latest"    if PKG_USING_ADAFRUIT_PCF8591_LATEST_VERSION

endif

