
# Kconfig file for package sht20
menuconfig PKG_USING_SHT20
    bool "a sht20 package for rt-thread"
    default n

if PKG_USING_SHT20

    config PKG_SHT20_PATH
        string
        default "/packages/iot/sht20"

    choice
        prompt "Version"
        default PKG_USING_SHT20_LATEST_VERSION
        help
            Select the package version

        config PKG_USING_SHT20_V100
            bool "v1.0.0"

        config PKG_USING_SHT20_LATEST_VERSION
            bool "latest"
    endchoice
          
    config PKG_SHT20_VER
       string
       default "v1.0.0"    if PKG_USING_SHT20_V100
       default "latest"    if PKG_USING_SHT20_LATEST_VERSION

endif

