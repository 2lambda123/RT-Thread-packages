
# Kconfig file for package iotshap-c-sdk
menuconfig PKG_USING_IOTSHARP-C-SDK
    bool "iotsharp-c-sdk: IoTSHARP Client SDK for RT_Thread"
     select PKG_USING_PAHOMQTT
    default n

if PKG_USING_IOTSHARP-C-SDK

    config PKG_IOTSHARP-C-SDK_PATH
        string
        default "/packages/iot/iot_cloud/iotsharp-c-sdk"




    config PKG_USING_IOTSHARP_EXAMPLES
        bool "Using IoTSharp Examples"
        default y

    config PKG_USING_IOTSHARP_DEVICE_SERVER
        string "Config IoTSharp Server "
        default "mqtt://cloud.iotsharp.net:1883"

    config PKG_USING_IOTSHARP_DEVICE_NAME
        string "Config Device Name"
        default ""

    config PKG_USING_IOTSHARP_DEVICE_SECRET
        string "Config Device Key"
        default ""

    config SDK_PLATFORM
        string
        default "rt-thread-package"

    choice
        prompt "Version"
        default PKG_USING_IOTSHARP-C-SDK_LATEST_VERSION
        help
            Select the package version

        config PKG_USING_IOTSHARP-C-SDK_V100
            bool "v1.0.0"

        config PKG_USING_IOTSHARP-C-SDK_LATEST_VERSION
            bool "latest"
    endchoice


    config PKG_IOTSHARP-C-SDK_VER
       string
       default "v1.0.0"    if PKG_USING_IOTSHARP-C-SDK_V100
       default "latest"    if PKG_USING_IOTSHARP-C-SDK_LATEST_VERSION

endif

