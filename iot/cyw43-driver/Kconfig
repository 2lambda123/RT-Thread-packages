
# Kconfig file for package cyw43-driver
menuconfig PKG_USING_CYW43_DRIVER
    bool "cyw43-driver: a driver for the CYW43xx WiFi/BT SoC."
    default n

if PKG_USING_CYW43_DRIVER

    config PKG_CYW43_DRIVER_PATH
        string
        default "/packages/iot/cyw43-driver"

    choice
        prompt "Version"
        help
            Select the package version

        config PKG_USING_CYW43_DRIVER_V100
            bool "v1.0.0"

        config PKG_USING_CYW43_DRIVER_LATEST_VERSION
            bool "latest"
    endchoice

    config PKG_CYW43_DRIVER_VER
       string
       default "v1.0.0"    if PKG_USING_CYW43_DRIVER_V100
       default "latest"    if PKG_USING_CYW43_DRIVER_LATEST_VERSION

endif

